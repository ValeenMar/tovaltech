{
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": [
      "/api/*",
      "/assets/*",
      "/robots.txt",
      "/sitemap.xml"
    ]
  },
  "routes": [
    {
      "route": "/admin",
      "allowedRoles": ["admin"]
    },
    {
      "route": "/admin/*",
      "allowedRoles": ["admin"]
    },
    {
      "route": "/api/orders*",
      "allowedRoles": ["admin"]
    },
    {
      "route": "/api/dashboard*",
      "allowedRoles": ["admin"]
    },
    {
      "route": "/api/customers*",
      "allowedRoles": ["admin"]
    },
    {
      "route": "/api/settings*",
      "allowedRoles": ["admin"]
    },
    {
      "route": "/api/sync*",
      "allowedRoles": ["admin"]
    },
    {
      "route": "/api/products-markup*",
      "allowedRoles": ["admin"]
    },
    {
      "route": "/api/categories*",
      "allowedRoles": ["admin"]
    },
    {
      "route": "/api/banners",
      "methods": ["POST"],
      "allowedRoles": ["admin"]
    },
    {
      "route": "/api/health*",
      "allowedRoles": ["admin"]
    }
  ],
  "responseOverrides": {
    "401": {
      "statusCode": 302,
      "redirect": "/.auth/login/aad?post_login_redirect_uri=/admin"
    },
    "403": {
      "statusCode": 302,
      "redirect": "/"
    }
  },
  "platform": {
    "apiRuntime": "node:18"
  }
}
