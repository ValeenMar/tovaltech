{
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": [
      "/api/*",
      "/assets/*",
      "/robots.txt",
      "/sitemap.xml"
    ]
  },
  "routes": [
    {
      "route": "/api/auth-register",
      "allowedRoles": [
        "anonymous"
      ]
    },
    {
      "route": "/api/auth-login",
      "allowedRoles": [
        "anonymous"
      ]
    },
    {
      "route": "/api/auth-confirm",
      "allowedRoles": [
        "anonymous"
      ]
    },
    {
      "route": "/api/auth-logout",
      "allowedRoles": [
        "anonymous"
      ]
    },
    {
      "route": "/api/auth-me",
      "allowedRoles": [
        "anonymous"
      ]
    },
    {
      "route": "/admin",
      "allowedRoles": [
        "admin"
      ]
    },
    {
      "route": "/admin/*",
      "allowedRoles": [
        "admin"
      ]
    },
    {
      "route": "/api/orders*",
      "allowedRoles": [
        "admin"
      ]
    },
    {
      "route": "/api/dashboard*",
      "allowedRoles": [
        "admin"
      ]
    },
    {
      "route": "/api/customers*",
      "allowedRoles": [
        "admin"
      ]
    },
    {
      "route": "/api/settings*",
      "allowedRoles": [
        "admin"
      ]
    },
    {
      "route": "/api/sync-timer*",
      "allowedRoles": [
        "anonymous"
      ]
    },
    {
      "route": "/api/sync-images-invid*",
      "allowedRoles": [
        "admin"
      ]
    },
    {
      "route": "/api/sync*",
      "allowedRoles": [
        "admin"
      ]
    },
    {
      "route": "/api/products-markup*",
      "allowedRoles": [
        "admin"
      ]
    },
    {
      "route": "/api/products/*/markup",
      "allowedRoles": [
        "admin"
      ]
    },
    {
      "route": "/api/account-profile*",
      "allowedRoles": [
        "anonymous"
      ]
    },
    {
      "route": "/api/my-orders*",
      "allowedRoles": [
        "anonymous"
      ]
    },
    {
      "route": "/api/categories*",
      "allowedRoles": [
        "admin"
      ]
    },
    {
      "route": "/api/analytics*",
      "allowedRoles": [
        "admin"
      ]
    },
    {
      "route": "/api/banners",
      "methods": [
        "POST"
      ],
      "allowedRoles": [
        "admin"
      ]
    },
    {
      "route": "/api/health*",
      "allowedRoles": [
        "admin"
      ]
    }
  ],
  "responseOverrides": {
    "401": {
      "statusCode": 302,
      "redirect": "/.auth/login/aad?post_login_redirect_uri=/admin"
    },
    "403": {
      "statusCode": 302,
      "redirect": "/"
    }
  },
  "globalHeaders": {
    "X-Content-Type-Options": "nosniff",
    "X-Frame-Options": "SAMEORIGIN"
  },
  "platform": {
    "apiRuntime": "node:18"
  }
}
